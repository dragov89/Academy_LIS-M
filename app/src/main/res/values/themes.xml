<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Academy_LISM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Registr_bok_tex">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yellow_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Registr_edit_tex">
        <item name="android:paddingStart">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">150dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_ten_gren">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">#514E4E</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">#077735</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="home_tex">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="home_inf">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textColor">#FFAB00</item>
    </style>
    <style name="btn_default">
        <item name="android:background">@drawable/button_niz</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="text_kategiri_home">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="home_btn_niz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/btn</item>
        <item name="android:enabled">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="kategotiya_btn">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">110dp</item>
    </style>

    <style name="Raport_bok_tex">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yellow_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="pochuk_image">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="pochuk_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:shadowColor">#514E4E</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/text_pochuk</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="pochuk_botton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="layout_constraintWidth_percent">0.3</item>
    </style>
    <style name="text_panel_gren">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/panel_zadach_original</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#1E1D1D</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/panel</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>