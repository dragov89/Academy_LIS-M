<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_search_nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.academy_lis_m.main.presentation.tab.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchNomerRechiFragment"
            app:destination="@id/searchNomerRechiFragment" />
        <action
            android:id="@+id/action_searchFragment_to_searchPersonFragment"
            app:destination="@id/searchPersonFragment" />
        <action
            android:id="@+id/action_searchFragment_to_searchDrivingLicenseFragment"
            app:destination="@id/searchDrivingLicenseFragment" />
        <action
            android:id="@+id/action_searchFragment_to_searchTransportFragment"
            app:destination="@id/searchTransportFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchDrivingLicenseFragment"
        android:name="com.example.academy_lis_m.main.presentation.tab.search.SearchDrivingLicenseFragment"
        android:label="fragment_search_driving_license"
        tools:layout="@layout/fragment_search_driving_license" />
    <fragment
        android:id="@+id/searchNomerRechiFragment"
        android:name="com.example.academy_lis_m.main.presentation.tab.search.SearchNomerRechiFragment"
        android:label="fragment_search_nomer_rechi"
        tools:layout="@layout/fragment_search_nomer_rechi" />
    <fragment
        android:id="@+id/searchPersonFragment"
        android:name="com.example.academy_lis_m.main.presentation.tab.search.SearchPersonFragment"
        android:label="fragment_search_person"
        tools:layout="@layout/fragment_search_person" />
    <fragment
        android:id="@+id/searchTransportFragment"
        android:name="com.example.academy_lis_m.main.presentation.tab.search.SearchTransportFragment"
        android:label="fragment_search_transport"
        tools:layout="@layout/fragment_search_transport" />
    <fragment android:id="@+id/placeholder" />
    <fragment android:id="@+id/placeholder2" />
</navigation>